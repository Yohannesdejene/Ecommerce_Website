<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    

    <link rel="stylesheet" href="/css/signuptobuy.css" />

    <title>Document</title>
    <script>
      var params = new URLSearchParams(window.location.search),
         picture = params.get("picture"),
         price = params.get("price"),
         name = params.get("name");
       function logintobuy() {
        var params = new URLSearchParams(window.location.search),
         picture = params.get("picture"),
         price = params.get("price"),
         name = params.get("name");
       fetch(
         "http://localhost:3000/user/logintobuy?name=" +
           name +
           "&price=" +
           price +
           "&picture=" +
           picture,
         {
           method: "GET",

           headers: {
             "Content-type": "application/json; charset=UTF-8",
           },
           
         }
       )
         .then((res) => res.text())
         .then((htmlStr) => {
           document.open();
           document.write(htmlStr);
           document.close();
         });
       }
       function signuptobuy() {
       
       fetch(
         "http://localhost:3000/user/signuptobuy?name=" +
           name +
           "&price=" +
           price +
           "&picture=" +
           picture,
         {
           method: "GET",

           headers: {
             "Content-type": "application/json; charset=UTF-8",
           },
         
         }
       )
         .then((res) => res.text())
         .then((htmlStr) => {
           document.open();
           document.write(htmlStr);
           document.close();
         });
       }
  
   </script>
  
</head>
<body>
   <div class="topnav">
   
       <button  type="button" onclick="logintobuy()">LOGIN</button>
       <button class="active" type="button" onclick="signuptobuy()">SIGN UP</button>
        
    </div>
 
   <form action="/user/signuptobuy" class="form" enctype="multipart/form-data" method="POST" >
      <h1 id="signup">SIGN UP<h1>
    <div class="whole">
      <br>
            <div class="form-group">    
              <label for="Fname" class="label">First Name</label>
              <input type="text" class="input" id="fname" name="fname" required />
            </div>
            <br>
            <div class="form-group">
              <label for="Lname" class="label">Last Name</label>
              <input type="text" class="input" id="lname" name="lname"  required/>
            </div>
            <br>
            <div class="form-group">
              <label for="email" class="label" >Email Address</label>
              <input
                type="email"
                class="input"
                id="email"
                name="email"
                required
              />
            </div>
            <br>
            <div class="form-group" >
              <label for="password" class="label">Password</label>
              <input
                type="password"
                class="input"
                id="password"
                name="password"
                  required
              />
            </div>
            <br>
            <div class="form-group">
              <label for="passwordConfirm" class="label">Confirm Password</label>
              <input
                type="password"
                class="input"
                id="passwordConfirm"
                name="passwordConfirm"
                required
              />
            </div>
            <br>
            <div class="form-group">
              <label for="address" class="label">Address </label>
              <input type="text" class="input" id="address" name="address" required/>
            </div>
            <br>
            <div class="form-group">
              <label for="creditcard" class="label">Credit card number </label>
              <input type="text" class="input" id="creditcard" name="creditcard" required/>
            </div>
            <br>
            <div class="form-group">
              <label for="profilephoto" class="label">uploadPhoto </label>
              <input type="file" class="input" id="profilephoto" name="profilephoto" />
            </div>
            
            <br><br><br>
            <button type="submit" id="button">Register User</button>
            <div class="message">
              <% if (message) { %>
                <h4 class="alwert alert-danger"><%=message%></p>
                <%} %>
              
               
               
            </div>
        
          </div>
          </form>
        
     
    <script src="/script/signup.js"></script>
  </body>
</html>
